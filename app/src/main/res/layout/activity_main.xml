<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sliding_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sliding Numbers"
        android:textSize="120px"
        android:textColor="#088da5"
        android:fontFamily="cursive"
        app:layout_constraintBottom_toTopOf="@id/grid_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sliding_numbers">



        <ImageView
            android:id="@+id/one_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="top"
            android:layout_row="0"
            android:contextClickable="true"
            android:src="@mipmap/ic_launcher"
            android:text="1" />

        <ImageView
            android:id="@+id/two_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="top"
            android:layout_row="0"
            android:contextClickable="true"
            android:src="@mipmap/ic_launcher"
            android:text="2" />

        <ImageView
            android:id="@+id/three_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="top"
            android:layout_row="0"
            android:contextClickable="true"
            android:src="@mipmap/ic_launcher"
            android:text="3" />

        <ImageView
            android:id="@+id/four_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="top"
            android:layout_row="1"
            android:contextClickable="true"
            android:src="@mipmap/ic_launcher"
            android:text="4" />

        <ImageView
            android:id="@+id/five_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="top"
            android:layout_row="1"
            android:contextClickable="true"
            android:src="@mipmap/ic_launcher"
            android:text="5" />

        <ImageView
            android:id="@+id/six_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="top"
            android:layout_row="1"
            android:contextClickable="true"
            android:src="@mipmap/ic_launcher"
            android:text="6" />

        <ImageView
            android:id="@+id/seven_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="top"
            android:layout_row="2"
            android:contextClickable="true"
            android:src="@mipmap/ic_launcher"
            android:text="7" />

        <ImageView
            android:id="@+id/eight_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="top"
            android:layout_row="2"
            android:contextClickable="true"
            android:src="@mipmap/ic_launcher"
            android:text="8" />

        <ImageView
            android:id="@+id/nine_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="top"
            android:layout_row="2"
            android:contextClickable="true"
            android:src="@mipmap/ic_launcher"
            />



    </GridLayout>

</android.support.constraint.ConstraintLayout>